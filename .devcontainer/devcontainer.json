{
  "name": "n8n-codespace",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "forwardPorts": [5678],
  "portsAttributes": {
    "5678": { "label": "n8n", "onAutoForward": "openPreview" }
  },
  "containerEnv": {
    "N8N_HOST": "0.0.0.0"
  },
  "postCreateCommand": "npm i -g n8n@1.106.3",
  "postStartCommand": "bash .devcontainer/start-n8n.sh",
  "remoteUser": "node"
}
